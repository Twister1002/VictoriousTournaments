@model WebApplication.Models.BracketViewModel

<li class="list-table-header bracket-header">
    <ul class="header-rounds" data-columns="@Model.TotalRounds()">

        @foreach (var headers in Model.RoundInfo())
        {
            <li class="column">
                <div>Round @headers.roundNum</div>
                @if (!Model.Bracket.IsFinalized)
                {
                    if (ViewBag.isAdministrator)
                    {
                        <div>
                            Best Of @Html.DropDownList("bestOfMatches", Enumerable.Range(1, 9).Select(n => new SelectListItem() { Text = n.ToString(), Value = n.ToString() }), new { @class = "bestOfMatches" })
                        </div>
                    }
                }
                else
                {
                    <div>Best of @headers.bestOf</div>
                }
            </li>
        }
    </ul>
</li>
