@model Tournament.Structure.IBracket


<div id="TournamentStandings">
    <div class="title">
        <h2>Tournament Standings</h2>
        <img class="tournament-standings" src="~/Images/svg/cross.svg" />
    </div>
    <ul class="list-table standings">
        <li class="list-table-header">
            <ul class="border" data-columns="3">
                <li>Rank</li>
                <li>Name</li>
                @if (Model.BracketType == DataLib.BracketTypeModel.BracketType.ROUNDROBIN)
                {
                    <li>RR Score</li>
                }
            </ul>
        </li>
        <li class="list-table-body">
            @for (int i = 0; i < Model.Rankings.Length; i++)
            {
                int playerId = Model.Rankings[i];
                Tournament.Structure.IPlayer player = Model.Players.Find(x => x.Id == playerId);
                if (player == null) { player = new Tournament.Structure.User(); }

                <ul class="border" data-columns="3">
                    <li class="position-rank">@(i + 1)</li>
                    <li class="position-name">@player.Name</li>
                    @if (Model.BracketType == DataLib.BracketTypeModel.BracketType.ROUNDROBIN)
                    {
                        <li class="position-score">RR Score</li>
                    }
                </ul>
            }
        </li>
    </ul>
</div>