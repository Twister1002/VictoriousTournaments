@model WebApplication.Models.Bracket

@{ 
    Html.RenderPartial("Brackets/UpperBracket", Model, new ViewDataDictionary(ViewData));
    Html.RenderPartial("Brackets/LowerBracket", Model, new ViewDataDictionary(ViewData));
}

<li class="list-table-body">
    <ul class="round" data-columns="@ViewBag.DisplayRounds">
        @for (int i = 1; i <= ViewBag.DisplayRounds; i++)
        {
            <li class="column">
                @if (i == ViewBag.DisplayRounds)
                {
                    ViewBag.isGrandFinal = true;
                    Html.RenderPartial("Brackets/Shared/_Match", Model.GrandFinal(), new ViewDataDictionary(ViewData));
                }
            </li>
        }
    </ul>
</li>