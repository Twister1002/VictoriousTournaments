@model WebApplication.Models.TournamentViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="TournamentSearch">
    <h2>Find A Tournament</h2>
    <ul class="list-table">
        <li>
            <ul class="options form" data-columns="3">
                <li>@Html.TextBoxFor(x => x.Title, Model.titleSearch, new { @class="field", placeholder="Search By Title"})</li>
                <li>@Html.DropDownListFor(x => x.GameType, new SelectList(Model.GameTypes, "GameTypeID", "Title"), "---Select Game---")</li>
                <li>@Html.TextBoxFor(t => t.TournamentStartDate, new { @class = "datepicker", placeholder="Start Date" } )</li>
            </ul>
        </li>
        <li class="list-table-header">
            <ul class="border list-table-columns" data-columns="4">
                <li>Title</li>
                <li>Game</li>
                <li>Start Date</li>
                <li>Registration</li>
            </ul>
        </li>
        <li class="list-table-body">
            @if (Model.SearchModels.Count > 0)
            {
                foreach (DataLib.TournamentModel tournyModel in Model.SearchModels)
                {
                    <a href="/Tournament/@tournyModel.TournamentID">
                        <ul class="list-table-columns column-clickable" data-columns="4">
                            <li>@tournyModel.Title</li>
                            <li>@(tournyModel.GameType != null ? tournyModel.GameType.Title : "None")</li>
                            <li>@(((DateTime)tournyModel.TournamentRules.TournamentStartDate).ToShortDateString())</li>
                            <li>@((bool)tournyModel.TournamentRules.IsPublic ? "Public" : "Private")</li>
                        </ul>
                    </a>
                }
            }
            else
            {
                <ul class="list-table-columns" data-columns="1">
                    <li>
                        No tournaments found.
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>