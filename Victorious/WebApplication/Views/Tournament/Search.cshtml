@model WebApplication.Models.TournamentViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="TournamentSearch">
    <h2>Find A Tournament</h2>
    <ul class="list-table">
        <li class="list-table-header">
            <ul class="options form" data-columns="5">
                <li class="column">@Html.TextBoxFor(x => x.Title, Model.Title, new { @class = "field title", placeholder = "Search By Title" })</li>
                <li class="column">@Html.DropDownListFor(x => x.GameType, new SelectList(Model.GameTypes, "GameTypeID", "Title"), "---Select Game---", new { @class = "gameType" })</li>
                <li class="column">@Html.DropDownListFor(t => t.PlatformType, new SelectList(Model.PlatformTypes, "PlatformID", "PlatformName"), "---Select Platform---", new { @class = "platformType" })</li>
                <li class="column">@Html.TextBoxFor(t => t.TournamentStartDate, DateTime.Now.ToShortDateString(), new { @class = "datepicker startDate", placeholder = "Start Date", value = String.Empty })</li>
                <li class="column">
                    <button type="button" class="searchButton">Search</button>
                    <button type="button" class="clearButton">Reset</button>
                </li>
            </ul>
        </li>
        <li class="list-table-header">
            <ul class="border list-table-columns" data-columns="5">
                <li class="column">Title</li>
                <li class="column">Game</li>
                <li class="column">Platform</li>
                <li class="column">Start Date</li>
                <li class="column">Registration</li>
            </ul>
        </li>
        <li class="list-table-body">
            @if (Model.SearchedTournaments.Count > 0)
            {
                foreach (var tournyModel in Model.SearchedTournaments)
                {
                    <a class="column" href="/Tournament/@tournyModel.TournamentID">
                        <ul class="column-clickable" data-columns="5">
                            <li class="column">@tournyModel.Title</li>
                            <li class="column">@(tournyModel.GameType != null ? tournyModel.GameType.Title : "None")</li>
                            <li class="column">@(tournyModel.Platform != null ? tournyModel.Platform.PlatformName : "None")</li>
                            <li class="column">@(tournyModel.TournamentStartDate.ToShortDateString())</li>
                            <li class="column">@(tournyModel.IsPublic ? "Public" : "Private")</li>
                        </ul>
                    </a>
                }
            }
            else
            {
                <ul class="list-table-columns" data-columns="1">
                    <li>
                        No tournaments found.
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>