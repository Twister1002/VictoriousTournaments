@model WebApplication.Models.AccountViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="AccountUpdate">
    <h2>Update Account</h2>
    @using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @onsubmit = "return Validate(this)" }))
    {
        <div class="section">
            @Html.TextBoxFor(m => m.Username, new { @hidden = "hidden", @required = "required", @readonly = "readonly" })
            <ul>
                <li>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @required = "required" })
                </li>
                <li>
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", @required = "required" })
                </li>
                <li>
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", @required = "required" })
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @required = "required" })
                </li>
            </ul>
        </div>
        <div class="login">
            <input type="submit" value="Update Account" />
        </div>
    }
</div>