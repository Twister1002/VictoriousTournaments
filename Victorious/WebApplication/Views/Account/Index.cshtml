@model WebApplication.Models.AccountViewModel
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="Account">
    <div class="tournaments">
        <h2>Tournaments</h2>
        <div class="personal">
            <label>Your Tournaments</label>
            <ul class="list-table">
                <li class="list-table-header">
                    <ul class="list-table-columns" data-columns="4">
                        <li class="column">Name</li>
                        <li class="column">Game</li>
                        <li class="column">Registration Days</li>
                        <li class="column">Start Date</li>
                    </ul>
                </li>
                <li class="list-table-body">
                    @foreach (var tournament in Model.getUserModel().Tournaments)
                    {
                        <a href="/Tournament/@tournament.TournamentID">
                            <ul class="row-clickable" data-columns="4">
                                <li class="column">@tournament.Title</li>
                                <li class="column">GAME</li>
                                <li class="column"></li>
                                <li class="column">@*@tournament.TournamentRules.TournamentStartDate*@</li>
                            </ul>
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="active">
            <label>Active Tournaments</label>
            <ul class="list-table">
                <li class="list-table-header">
                    <ul class="list-table-columns" data-columns="2">
                        <li class="column">Name</li>
                        <li class="column">Game</li>
                    </ul>
                </li>
                <li class="list-table-body">
                    @for (int i = 0; i < 3; i++)
                    {
                        <a href="#">
                            <ul class="row-clickable" data-columns="2">
                                <li class="column">Tournament @i</li>
                                <li class="column">Rocket League</li>
                            </ul>
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="upcoming">
            <label>Upcoming</label>
            <ul class="list-table">
                <li class="list-table-header">
                    <ul class="list-table-columns" data-columns="3">
                        <li class="column">Name</li>
                        <li class="column">Game</li>
                        <li class="column">Start Date</li>
                    </ul>
                </li>
                <li class="list-table-body">
                    @for (int i = 0; i < 5; i++)
                    {
                        <a href="#">
                            <ul class="row-clickable" data-columns="3">
                                <li class="column">Tournament @i</li>
                                <li class="column">Rocket League</li>
                                <li class="column">@DateTime.Now.ToShortDateString()</li>
                            </ul>
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>

    <div class="settings">
        <h2>Settings</h2>
        <ul>
            <li class="clickable-underline">@Html.ActionLink("Update Account", "Update", "Account")</li>
            <li class="clickable-underline">@Html.ActionLink("Create Tournament", "Create", "Tournament")</li>
            <li>View Profile</li>
            <li class="clickable-underline">@Html.ActionLink("Logout", "Logout", "Account")</li>
        </ul>
    </div>
</div>