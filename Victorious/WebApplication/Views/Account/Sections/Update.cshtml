@model WebApplication.Models.ViewModels.AccountViewModel
@{
    bool facebook = Model.LinkedProviders.SingleOrDefault(x => x.ProviderID == (int)DatabaseLib.AccountSocialModel.SocialProviders.FACEBOOK) != null;
}
<div id="AccountUpdate">
    <h2>Update Account</h2>
    @using (Html.BeginForm("Update", "Account", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Username, new { @hidden = "hidden", @required = "required", @readonly = "readonly" })

        <div class="section">
            <h3>About you</h3>
            <ul>
                <li>
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name", @required = "required" })
                </li>
                <li>
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", @required = "required" })
                </li>
                <li>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @required = "required" })
                </li>
            </ul>
        </div>
        <div class="section">
            <h3>Password Update</h3>
            <ul>
                <li>
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @placeholder = "New Password" })
                </li>
                <li>
                    @Html.LabelFor(x => x.PasswordVerify)
                    @Html.PasswordFor(x => x.PasswordVerify, new { @placeholder = "Verify New Password" })
                </li>
            </ul>
        </div>
        <div class="section social-media">
            <h3>Linked Accounts</h3>
            <div class="social-connection" data-social="@((int)DatabaseLib.AccountSocialModel.SocialProviders.FACEBOOK)">
                <button type="button" class="facebook facebook-social-button" value="@(facebook ? "remove" : "add")">
                    <span class="icon icon-facebook"></span>
                    <span class="prefix">@(facebook ? "Disconnect" : "Link with")</span>
                    Facebook
                </button>
            </div>
        </div>
        <div class="section">
            <h3>Email Subscriptions</h3>
            <ul>
                <li>
                    @Html.LabelFor(x => x.EmailMajorUpdates)
                    @Html.CheckBoxFor(x => x.EmailMajorUpdates)
                </li>
            </ul>
        </div>
        <div class="section">
            <h3>Authorization</h3>
            <ul>
                <li>
                    @Html.LabelFor(x => x.CurrentPassword)
                    @Html.PasswordFor(x => x.CurrentPassword, new { @placeholder = "Password" })
                </li>
            </ul>
        </div>
        <div class="login">
            <input type="submit" value="Update Account" />
        </div>
    }
</div>