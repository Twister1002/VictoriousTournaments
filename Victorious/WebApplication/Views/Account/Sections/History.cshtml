@model WebApplication.Models.AccountViewModel

@{

}

<div id="AccountHistory">
    <h2>Tournament History</h2>
    <div class="past">
        <ul class="list-table">
            <li class="list-table-header">
                <ul class="list-table-columns" data-columns="3">
                    <li class="column">Name</li>
                    <li class="column">Game</li>
                    <li class="column">Tournament Date</li>
                </ul>
            </li>
            <li class="list-table-body">
                @foreach (var tournament in Model.Tournaments[WebApplication.Models.TournamentStatus.PAST])
                {
                    <a href="/Tournament/@tournament.TournamentID">
                        <ul class="row-clickable" data-columns="3">
                            <li class="column">@tournament.Title</li>
                            <li class="column">GAME</li>
                            <li class="column">@(tournament.TournamentStartDate.ToShortDateString())</li>
                        </ul>
                    </a>
                }
            </li>
        </ul>
    </div>
</div>
