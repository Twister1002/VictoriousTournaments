@model WebApplication.Models.AccountViewModel

@{ 

}

<div id="AccountTournaments">
    <h2>Your Tournaments</h2>
    <div class="personal">
        <label>Managing</label>
        <ul class="list-table">
            <li class="list-table-header">
                <ul class="list-table-columns" data-columns="3">
                    <li class="column">Name</li>
                    <li class="column">Game</li>
                    <li class="column">Tournament Date</li>
                </ul>
            </li>
            <li class="list-table-body">
                @foreach (var tournament in Model.Tournaments[WebApplication.Models.TournamentStatus.ADMIN])
                {
                    <a href="/Tournament/@tournament.TournamentID">
                        <ul class="row-clickable" data-columns="3">
                            <li class="column">@tournament.Title</li>
                            <li class="column">@(tournament.GameType != null ? tournament.GameType.Title : "None")</li>
                            <li class="column">@(tournament.TournamentStartDate.ToShortDateString())</li>
                        </ul>
                    </a>
                }
            </li>
        </ul>
    </div>
    <div class="active">
        <label>Active</label>
        <ul class="list-table">
            <li class="list-table-header">
                <ul class="list-table-columns" data-columns="2">
                    <li class="column">Name</li>
                    <li class="column">Game</li>
                </ul>
            </li>
            <li class="list-table-body">
                @foreach (var tournament in Model.Tournaments[WebApplication.Models.TournamentStatus.ACTIVE])
                {
                    <a href="/Tournament/@tournament.TournamentID">
                        <ul class="row-clickable" data-columns="2">
                            <li class="column">@tournament.Title</li>
                            <li class="column">GAME</li>
                        </ul>
                    </a>
                }
            </li>
        </ul>
    </div>
    <div class="upcoming">
        <label>Upcoming</label>
        <ul class="list-table">
            <li class="list-table-header">
                <ul class="list-table-columns" data-columns="3">
                    <li class="column">Name</li>
                    <li class="column">Game</li>
                    <li class="column">Tournament Date</li>
                </ul>
            </li>
            <li class="list-table-body">
                @foreach (var tournament in Model.Tournaments[WebApplication.Models.TournamentStatus.UPCOMING])
                {
                    <a href="/Tournament/@tournament.TournamentID">
                        <ul class="row-clickable" data-columns="3">
                            <li class="column">@tournament.Title</li>
                            <li class="column">GAME</li>
                            <li class="column">@(tournament.TournamentStartDate.ToShortDateString())</li>
                        </ul>
                    </a>
                }
            </li>
        </ul>
    </div>
    <div class="past">
        <label>Past</label>
        <ul class="list-table">
            <li class="list-table-header">
                <ul class="list-table-columns" data-columns="3">
                    <li class="column">Name</li>
                    <li class="column">Game</li>
                    <li class="column">Tournament Date</li>
                </ul>
            </li>
            <li class="list-table-body">
                @foreach (var tournament in Model.Tournaments[WebApplication.Models.TournamentStatus.PAST])
                {
                    <a href="/Tournament/@tournament.TournamentID">
                        <ul class="row-clickable" data-columns="3">
                            <li class="column">@tournament.Title</li>
                            <li class="column">GAME</li>
                            <li class="column">@(tournament.TournamentStartDate.ToShortDateString())</li>
                        </ul>
                    </a>
                }
            </li>
        </ul>
    </div>

</div>