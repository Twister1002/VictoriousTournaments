@model WebApplication.Models.ViewModels.AccountRetrieveViewModel

@{
    ViewBag.Title = "Retrieve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="AccountRetrieve">
    <h2>Account Retrieval</h2>
    <div class="section">
        <p>Hey there, let's reset that password!</p>
        @using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Token)
            <input type="submit" value="submit" />
        }
    </div>
</div>

