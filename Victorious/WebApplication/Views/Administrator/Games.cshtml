@model WebApplication.Models.AdministratorViewModel

<div id="AdministratorGames">
    <h2>Games</h2>
    <div>
        <ul class="list-table">
            <li class="list-table-input">
                <ul class="form options" data-columns="3">
                    <li class="gameTitle">
                        @Html.TextBoxFor(x => x.GameName, null, new { @class = "field", placeholder="Game Name" })
                    </li>
                    <li class="gamePlatforms">CHECKBOXES</li>
                    <li class="gameAdd">
                        <button type="button" class="GameAddButton">Add Game</button>
                    </li>
                </ul>
            </li>
            <li class="list-table-header">
                <ul data-columns="3">
                    <li>Name</li>
                    <li>Platforms</li>
                    <li>&nbsp;</li>
                </ul>
            </li>
            <li class="list-table-body border">
                @{
                    foreach (var game in Model.Games)
                    {
                        <ul class="game" data-columns="3" data-gameid="@game.GameTypeID">
                            <li class="gameTitle">@game.Title</li>
                            <li class="gamePlatforms">Unknown</li>
                            <li class="gameDelete"><span class="icon icon-cross"></span></li>
                        </ul>
                    }
                }
            </li>
        </ul>
    </div>
</div>